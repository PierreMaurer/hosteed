# Database
DATABASE_URL="your-database-url"

# NextAuth
AUTH_SECRET="your-auth-secret" # Added by npx auth. Read more: https://cli.authjs.dev/
NEXTAUTH_URL=http://localhost:3000/

# Providers
AUTH_GOOGLE_ID="your-google-id"
AUTH_GOOGLE_SECRET="your-google-secret"

# Stripe
STRIPE_SECRET_KEY="your-stripe-secret-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-public-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Main app
NEXT_PUBLIC_BASE_URL=http://localhost:3000/

# Email Config
EMAIL_PASSWORD="your-email-password"
EMAIL_LOGIN="your-email-login"
EMAIL_VERIF_TOKEN="your-email-verif-token"
NEXT_PUBLIC_SEND_MAIL=true  # Set to false to disable email sending (except email verification)

#Reset password
RESET_PASSWORD_SECRET= "Reset-pasword-token"

# Email
NEXT_PUBLIC_SEND_MAIL=false # Set to false to disable email sending (except email verification)

# === REDIS CACHE CONFIGURATION ===

# Redis Connection (Primary - use either REDIS_URL or individual settings)
REDIS_URL=redis://localhost:6379
# Alternative: Individual Redis settings (if REDIS_URL not used)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Cache Control
ENABLE_REDIS_CACHE=false  # Set to true to enable Redis caching

# Redis Production Settings (for production environments)
REDIS_TLS_ENABLED=false   # Set to true for production with TLS
REDIS_MAX_RETRIES=3
REDIS_CONNECTION_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# Redis Memory and Performance
REDIS_MAX_MEMORY=128mb    # Adjust based on your server capacity
REDIS_EVICTION_POLICY=allkeys-lru
REDIS_LAZY_FREE=true

# Optimisation des images
ENABLE_IMAGE_OPTIMIZATION=false
WEBP_QUALITY=80
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_COMPRESSION_RATIO=0.8

# Monitoring des performances
ENABLE_PERFORMANCE_MONITORING=false
PERFORMANCE_ALERT_THRESHOLD=5000
PERFORMANCE_ALERT_EMAIL=admin@yourdomain.com

# Analytics et m√©triques
ENABLE_ANALYTICS=false
ANALYTICS_SAMPLE_RATE=0.1

# === CACHE TTL CONFIGURATION (in seconds) ===

# Product-related caching
CACHE_TTL_PRODUCT_SEARCH=300      # 5 minutes - Product search results
CACHE_TTL_PRODUCT_DETAILS=1800    # 30 minutes - Individual product data
CACHE_TTL_PRODUCT_LIST=600        # 10 minutes - Host product lists

# Availability and booking caching
CACHE_TTL_AVAILABILITY=300        # 5 minutes - Availability checks
CACHE_TTL_BOOKING_DATA=900        # 15 minutes - Booking-related data

# User and session caching
CACHE_TTL_USER_SESSION=3600       # 1 hour - User session data
CACHE_TTL_USER_PROFILE=1800       # 30 minutes - User profile data
CACHE_TTL_USER_ACTIVITY=86400     # 24 hours - User activity logs

# Static data caching (rarely changes)
CACHE_TTL_STATIC_DATA=86400       # 24 hours - Equipment, meals, services, etc.
CACHE_TTL_SEARCH_FILTERS=1800     # 30 minutes - Search filter aggregations

# Rate limiting
CACHE_TTL_RATE_LIMIT=3600         # 1 hour - Rate limiting windows

# Performance and monitoring
CACHE_TTL_ANALYTICS=3600          # 1 hour - Analytics and stats data
CACHE_TTL_PERFORMANCE_METRICS=300 # 5 minutes - Performance monitoring data

# Migration des images (pour script de migration uniquement)
CONFIRM_MIGRATION=false
